# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Signup
GET     /signup                     controllers.SignUp.blank()
#GET     /users/fakeuser             controllers.SignUp.edit()
POST    /signup                     controllers.SignUp.submit()

POST    /login                      controllers.Application.authenticate()
GET     /login                      controllers.Application.login()
GET     /logout                    controllers.Application.logout()
GET     /main                       controllers.Projects.index()

GET     /admin/restaurants            controllers.admin.Restaurants.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")
# Add restaurant
GET     /restaurants/new              controllers.admin.Restaurants.create()
POST    /restaurants                  controllers.admin.Restaurants.save()

# Edit existing restaurant
GET     /restaurants/:id              controllers.admin.Restaurants.edit(id:Long)
POST    /restaurants/:id              controllers.admin.Restaurants.update(id:Long)

# Delete a restaurant
POST    /restaurants/:id/delete       controllers.admin.Restaurants.delete(id:Long)
#--------------------
GET     /admin/foodtypes            controllers.admin.Foodtypes.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")
# Add Foodtype
GET     /foodtypes/new              controllers.admin.Foodtypes.create()
POST    /foodtypes                  controllers.admin.Foodtypes.save()

# Edit existing Foodtype
GET     /foodtypes/:id              controllers.admin.Foodtypes.edit(id:Long)
POST    /foodtypes/:id              controllers.admin.Foodtypes.update(id:Long)

# Delete a Foodtype
POST    /foodtypes/:id/delete       controllers.admin.Foodtypes.delete(id:Long)
#--------------------
GET     /admin/foods            controllers.admin.Foods.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")
# Add Food
GET     /foods/new              controllers.admin.Foods.create()
POST    /foods                  controllers.admin.Foods.save()

# Edit existing Food
GET     /foods/:id              controllers.admin.Foods.edit(id:Long)
GET     /foods/json/:id              controllers.admin.Foods.getFoodJson(id:Long)
POST    /foods/:id              controllers.admin.Foods.update(id:Long)


# Delete a Food
POST    /foods/:id/delete       controllers.admin.Foods.delete(id:Long)
#--------------------
GET     /admin/users            controllers.admin.Users.list(p:Int ?= 0, s ?= "userName", o ?= "asc", f ?= "")
# Add User
GET     /users/new              controllers.admin.Users.create()
POST    /users                  controllers.admin.Users.save()

# Edit existing User
GET     /users/:id              controllers.admin.Users.edit(id:Long)
POST    /users/:id              controllers.admin.Users.update(id:Long)

# Delete a User
POST    /users/:id/delete       controllers.admin.Users.delete(id:Long)
#--------------------
